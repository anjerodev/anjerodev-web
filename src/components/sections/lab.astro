---
import QuoteIcon from '@/icons/quote.svg'
import LabIcon from '@/icons/lab.svg'
import siteConfig from '@/lib/site-config'
import LabCard from '@/components/LabCard.astro'
import HorizontalScrollButtons from '@/components/HorizontalScrollButtons.astro'
---

<section class="border-b">
  <div class="container grid grid-cols-3">
    <div
      class="group/quote col-span-3 grid place-items-center border-x border-b px-6 py-10 lg:col-span-1 lg:border-b-0 lg:px-12"
    >
      <div class="relative px-7 text-2xl font-medium">
        <QuoteIcon
          class="text-muted-foreground group-hover/quote:text-accent absolute top-0 left-0 size-12 -translate-x-6 -translate-y-4 scale-x-[-1] -rotate-6 transition-all duration-200 group-hover/quote:rotate-6"
        />
        <p
          class="text-muted-foreground group-hover/quote:text-foreground transition-colors"
        >
          I enjoy building things that make a difference, transforming my ideas
          into tangible projects and helping others do the same.
        </p>
        <QuoteIcon
          class="text-muted-foreground group-hover/quote:text-accent absolute right-0 bottom-0 size-12 translate-x-6 translate-y-4 -rotate-6 transition-all duration-200 group-hover/quote:rotate-6"
        />
      </div>
    </div>
    <div
      class="relative col-span-3 overflow-hidden border-x pt-10 lg:col-span-2 lg:border-r lg:border-l-0"
    >
      <!-- Dots bg -->
      <div class="absolute inset-0 z-[-1] opacity-15">
        <div
          class="absolute h-full w-full bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] mask-[radial-gradient(ellipse_50%_50%_at_50%_50%,#000_80%,transparent_100%)] bg-size-[16px_16px]"
        >
        </div>
      </div>
      <!-- Dots bg -->
      <div class="flex items-start justify-between">
        <div class="flex items-center gap-2 px-6 lg:px-12">
          <LabIcon class="text-accent size-6 shrink-0" />
          <h3 class="font-mono text-lg font-bold">LAB</h3>
        </div>
        <div class="hidden px-6 md:block lg:px-12">
          <HorizontalScrollButtons />
        </div>
      </div>
      <div
        class="lab-container grid w-full auto-cols-min grid-flow-col grid-rows-2 gap-4 overflow-auto px-6 pt-5 pb-10 lg:px-12"
      >
        {
          siteConfig.labProjects.map((project) => (
            <LabCard
              id={project.id}
              title={project.name}
              subtitle={project.subtitle || ''}
              body={project.description}
              href={project.link}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
